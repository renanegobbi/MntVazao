@{
    ViewData["Title"] = "Gráficos";
}

@section Javascript
{
    <script src="~/js/Views/home-graficos.js"></script>
}

<div class="hero-unit">
    <h2 class="mt-2 p-2 titulo-secao">Painel de controle - Gráficos</h2>
</div>

<div class="row ml-1 pt-3">
    <label class="control-label">Vazão</label>
    <div class="col-sm-12 col-md-3">
        <div class="form-group">
            <select id="iVazao" name="vazao" class="form-control" style="width:100%;">
                <option value="0">Litros por hora (L/H)</option>
                <option value="1">Litros por dia (L/D)</option>
            </select>
        </div>
    </div>
    <label class="control-label">Data:</label>
    <div class="col-sm-12 col-md-3">
        <input type="text" class="form-control somenteNumero campo-data" id="iData" name="iProcurarNumeroAno" />
    </div>
    <div style="border-radius: 0;">
        <button type="submit" class="btn btn-primary btn-sm" id="btn-buscar">
            <i class="fa fa-search mr-xs"></i> Buscar
        </button>
    </div>
    <div style="border-radius: 0;">
        <button type="submit" class="btn btn-primary btn-sm ml-3" id="btn-save-png">
            <i class="fas fa-file-image"></i> PNG
        </button>
    </div>
</div>

<div class="row">
    <div class="col-sm-12">
        <section class="panel">
            <div class="panel-body">
                <div class="">
                    <div class="card col-sm-12 col-md-8">
                        <div id="loader" style="left: 50%; top: 50%; z-index: 1000; display: none; position: relative">
                            <img src="~/gif/ajax_loader.gif" />
                        </div>
                        <canvas id="chart"></canvas>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>